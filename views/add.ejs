        <h1 class="text-xl">Create a new post.</h1>
        <hr class="opacity-10 mt-2">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input required class="block text-black w-1/3 px-3 py-2 mt-2" type="file" name="postimage">
