<% include ./partials/header.ejs%>
  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[35vw] bg-zinc-100 px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl mb-7 text-center font-semibold text-zinc-700 leading-none capitalize tracking-tighter">Welcome to Pinterest.</h1>
      <% if (fail.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong><%= fail%></strong> 
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      <form action="/login" method="post">
        <input class="border-2 block rounded-md w-full px-3 mt-2 py-2" type="text" name="username" placeholder="UserName" required>
        <input class="border-2 block rounded-md w-full px-3 mt-2 py-2" type="password" name="password" placeholder="Password" required>
        <a class="inline-block mt-2 font-semibold text-zinc-700" href="">Forgot Password?</a>
        <input class="border-2 block rounded-full w-full px-3 mt-2 py-2 bg-red-600 text-white rounded-full" type="submit" value="Login">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-2/3 mx-auto text-center">Lorem ipsum dolor sit amet consectetur adipisicing elit. Hic, officiis suscipit voluptate quidem dolorem fugit beatae sed in atque voluptates.</p>
      </form>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Don't have an account?</a>
    </div>
  </div>
<% include ./partials/footer.ejs%>